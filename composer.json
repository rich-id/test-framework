{
    "name": "richcongress/test-framework",
    "description": "A Test framework that uses the PHPUnit Extension with priorities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "RichCongress",
            "homepage": "https://www.richcongress.com"
        }
    ],
    "support": {
        "email": "contact@richcongress.com",
        "source": "https://github.com/richcongress/test-framework",
        "docs": "https://github.com/richcongress/test-framework/blob/master/README.md",
        "issues": "https://github.com/richcongress/test-framework/issues"
    },
    "require": {
        "php": "^8.1",
        "phpunit/phpunit": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "RichCongress\\TestFramework\\": ""
        },
        "files" : [
            "TestConfiguration/Attribute/TestConfig.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RichCongress\\TestFramework\\Tests\\": "Tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "discard-changes": true,
        "sort-packages": true
    }
}
